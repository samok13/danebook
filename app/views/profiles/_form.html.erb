
<%= form_for profile do |f| %>
  
  <table class="table col-sm-offset-1">
  <thead>
  <tr>
    <th class="col-sm-6">Basic Information</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td>Birthday:</td>
    <td><%= @profile.user.birthday.strftime("%B %d, %Y") if @profile.user.birthday%></td>
  </tr>
  <tr>
    <td>College:</td>
    <td><%=f.text_field :college%></td>
  </tr>
  <tr>
    <td>Hometown</td>
    <td><%= f.text_field :hometown %></td>
  </tr>
  <tr>
    <td>Currently Lives:</td>
    <td><%= f.text_field :lives %></td>
  </tr>
  </tbody>
  </table>

  <table>
  <thead>
  <tr>
    <th>Contact Information</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td>Email:</td>
    <td><%= @profile.user.email %></td>
  </tr>
  </tbody>
  </table>

  <h3>About Me</h3>
  <p><%= f.text_area :about, size: "40x5" %></p>
  </section>
  
  <h3>Words to Live by</h3>
  <p><%= f.text_area :words, size: "40x5" %></p>

  <h3>Add a Profile Picture</h3>
  <p><%= f.file_field :avatar %></p>

  <div>
    <%= f.submit "Save Changes" %>
  </div>

<% end %> 




