<% if current_user.friends.include? user %>
  <%= form_tag friending_path(user), method: :delete do %>
    <%= submit_tag "Unfriend" %>
  <% end %>
<% else %>
  <%= form_tag friendings_path do %>
    <%= hidden_field_tag :friend_id, user.id %>
    <%= submit_tag "Add friend" %>
  <% end %>
<% end %>